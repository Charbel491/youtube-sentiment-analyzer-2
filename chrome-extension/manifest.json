{
  "name": "YouTube Sentiment Analyzer",
  "description": "Analyse le sentiment des commentaires YouTube en temps r√©el.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://*/*"],
  "action": {
    "default_title": "Analyser les commentaires",
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": { "16": "icons/icon16.png" }
}